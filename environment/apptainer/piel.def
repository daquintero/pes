Bootstrap: docker
From: efabless/openlane

%post
    yum -y update
    
    # Install mamba
    curl -o /tmp/mamba_install.sh -L https://micro.mamba.pm/install.sh 
    "${SHELL}" /tmp/mamba_install.sh
    
    yum -y install cowsay lolcat

%environment
    export LC_ALL=C
    export PATH=/usr/games:$PATH

%runscript
    date | cowsay | lolcat
