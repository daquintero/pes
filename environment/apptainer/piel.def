Bootstrap: docker
From: efabless/openlane

%post
    yum -y update
    yum install -y bzip2 wget
    
    # Install mamba
    curl -o /bin/micromamba -L https://micro.mamba.pm/api/micromamba/linux-64/latest 
    tar -xvj /bin/micromamba
    
    yum -y install cowsay lolcat

%environment
    export LC_ALL=C
    export PATH=/usr/games:$PATH

%runscript
    date | cowsay | lolcat
